<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.chenxin.dao.FavoriteMapper">
    <select id="listAllFavorites" resultType="team.chenxin.bean.Favorite">
        select * from favorite
        where user_id=#{user_id}
    </select>

    <select id="getFavorite" resultType="team.chenxin.bean.Favorite">
        select * from favorite
        where user_id=#{user_id} and favorite_id=#{fa_id}
    </select>

    <insert id="addFavorite">
        insert into favorite (user_id,favorite_id,favorite_name,create_time)
        values (#{favorite.user_id},#{favorite.favorite_id},#{favorite.favorite_name},#{favorite.create_time})
    </insert>

    <delete id="deleteFavorite">
        delete from favorite
        where favorite_id=#{fa_id}
    </delete>

    <update id="modifyFavorite">
        update favorite
        set favorite_name=#{favorite_name}
        where favorite_id=#{fa_id}
    </update>
</mapper>
