<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.chenxin.dao.CollectionMapper">
    <resultMap id="BaseResultMap" type="team.chenxin.bean.Collect">
        <id column="id" jdbcType="int" property="id"/>
        <result column="film_id" jdbcType="int" property="film_id"/>
        <result column="favorite_id" jdbcType="int" property="favorite_id"/>
        <result column="collect_time" jdbcType="int" property="collect_time"/>
    </resultMap>

    <select id="getCollections" resultMap="BaseResultMap">
        select *
        from collect
        order by id asc
    </select>
</mapper>
